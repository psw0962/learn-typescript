{
    "compilerOptions": {
        "allowJs": true, // js파일도 컴파일 가능
        "target": "ES5",
        "outDir": "./built",
        "moduleResolution": "Node", // promise 인식
        "lib": ["ES2015", "DOM", "DOM.Iterable"],
        "noImplicitAny": true
    },
    "include": ["./src/**/*"] // src 폴더에 있는 파일을 tsc
}